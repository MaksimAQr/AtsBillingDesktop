<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ATS_Desktop.ViewModels"
        x:Class="ATS_Desktop.Views.Pages.TariffDetailsWindow"
        Title="{Binding WindowTitle}"
        x:DataType="vm:TariffDetailsViewModel"
        SizeToContent="WidthAndHeight"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        MinWidth="400"
        MinHeight="600">
    
    <Design.DataContext>
        <vm:TariffDetailsViewModel/>
    </Design.DataContext>
    
    <Border Padding="20">
        <StackPanel Spacing="20">
            
            <!-- Заголовок -->
            <TextBlock Text="{Binding Name}"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"/>
            
            <!-- Информация о тарифе -->
            <Border Background="#F8F9FA"
                    CornerRadius="10"
                    Padding="20">
                <StackPanel Spacing="15">
                    
                    <!-- Название тарифа -->
                    <StackPanel>
                        <TextBlock Text="Название тарифа:" 
                                   Foreground="#7F8C8D"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"/>
                    </StackPanel>
                    
                    <!-- Тип тарифа -->
                    <StackPanel>
                        <TextBlock Text="Тип тарифа:" 
                                   Foreground="#7F8C8D"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding TariffType}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"/>
                    </StackPanel>
                    
                    <!-- Стоимость -->
                    <StackPanel>
                        <TextBlock Text="Стоимость за минуту:" 
                                   Foreground="#7F8C8D"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Price}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#27AE60"/>
                    </StackPanel>
                    
                    <!-- Количество потребителей -->
                    <StackPanel>
                        <TextBlock Text="Количество потребителей:" 
                                   Foreground="#7F8C8D"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Consumers}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#2980B9"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            
            <!-- Описание тарифа -->
            <Border Background="#E8F4FD"
                    CornerRadius="10"
                    Padding="20"
                    IsVisible="{Binding HasDescription}">
                <StackPanel>
                    <TextBlock Text="Описание тарифа:" 
                               Foreground="#2980B9"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Description}"
                               Foreground="#2C3E50"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Spacing="10">
                
                <Button Content="Закрыть"
                        Click="CloseButton_Click"
                        Background="#95A5A6"
                        Foreground="White"
                        Padding="15,8"
                        CornerRadius="5"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
    
</Window>